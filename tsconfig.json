{
  "compilerOptions": {
    "outDir": "dist",
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "ES5",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "declaration": true,
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "types": [
      "node",
      "mocha",
      "chai"
    ],
    "lib": ["es2015", "dom"]
  },
  "files": [
    "index.ts",
    "angular2-suite-flipper.ts",
    "src/errors.ts",
    "src/flipper.service.ts",
    "src/flipper.ts",
    "src/index.ts",
    "src/is-off.pipe.ts",
    "src/is-on.pipe.ts"
  ],
  "exclude": [
    "node_modules"
  ],
  "angularCompilerOptions": {
    "strictMetadataEmit": true,
    "skipTemplateCodegen": true
  }
}